<Application
    x:Class="EventMaker.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:EventMaker"
    RequestedTheme="Light">
    <Application.Resources>
        <DataTemplate x:Key="DataTemplateOk">
            <StackPanel Height="100" Width="430" Orientation="Horizontal">
                <TextBlock TextWrapping="Wrap" Text="{Binding Id}"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Name}"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Place}" Width="68"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding Description}"/>
                <TextBlock TextWrapping="Wrap" Text="{Binding DateTime}"/>
            </StackPanel>

        </DataTemplate>
    </Application.Resources>

</Application>
